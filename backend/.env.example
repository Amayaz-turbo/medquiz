NODE_ENV=development
PORT=8080

DATABASE_URL=postgresql://localhost:5432/medquiz

ACCESS_TOKEN_SECRET=change-me-access-secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_SECRET=change-me-refresh-secret
REFRESH_TOKEN_TTL_DAYS=30

CORS_ORIGIN=http://localhost:3000,http://localhost:5173

DUEL_EXPIRATION_JOB_ENABLED=true
DUEL_EXPIRATION_INTERVAL_SECONDS=300

METRICS_ENABLED=true
# Required in production when METRICS_ENABLED=true (min 16 chars).
METRICS_AUTH_TOKEN=
SLO_AVAILABILITY_TARGET_PCT=99.9
SLO_P95_LATENCY_MS=300
SLO_WINDOW_DAYS=30
HEALTH_DB_TIMEOUT_MS=1500

# Push notifications dispatch worker.
PUSH_NOTIFICATIONS_JOB_ENABLED=true
PUSH_NOTIFICATIONS_INTERVAL_SECONDS=30
PUSH_NOTIFICATIONS_BATCH_SIZE=100
# Optional real provider bridge. If empty, worker logs dispatch locally.
PUSH_NOTIFICATIONS_WEBHOOK_URL=
PUSH_NOTIFICATIONS_WEBHOOK_TOKEN=
PUSH_NOTIFICATIONS_WEBHOOK_TIMEOUT_MS=2500

# Optional allowlist for open-text answer management endpoints.
# Comma-separated user IDs (UUID v4). Leave empty to rely on question ownership only.
OPEN_TEXT_EDITOR_USER_IDS=

# Optional allowlist for training content creation endpoints.
# Comma-separated user IDs (UUID v4). Empty in dev/test allows any authenticated creator.
TRAINING_CONTENT_EDITOR_USER_IDS=
